<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Crear Post</title>

  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body class="grey lighten-4">

  <nav>
    <div class="nav-wrapper teal">
      <a href="/posts" class="brand-logo center">Nuevo Post</a>
    </div>
  </nav>

  <div class="container" style="margin-top: 30px;">

    <div class="card">
      <div class="card-content">

        <span class="card-title">Crear un nuevo Post</span>

        <form action="/posts/create" method="POST">

          <!-- Título -->
          <div class="input-field">
            <input type="text" id="title" name="title" required minlength="5" maxlength="30">
            <label for="title">Título</label>
          </div>

          <!-- Contenido -->
          <div class="input-field">
            <textarea id="content" name="content" class="materialize-textarea" required minlength="10"></textarea>
            <label for="content">Contenido</label>
          </div>

          <!-- Hashtags -->
          <div class="input-field">
            <input type="text" id="hashtags" name="hashtags" placeholder="Ej: nodejs,javascript,backend">
            <label for="hashtags">Hashtags (separados por coma)</label>
          </div>

          <!-- Imagen -->
          <div class="input-field">
            <input type="text" id="imageUrl" name="imageUrl" placeholder="URL de la imagen">
            <label for="imageUrl">Imagen URL</label>
          </div>

          <button class="btn waves-effect waves-light teal" type="submit">
            Crear Post <i class="material-icons right">send</i>
          </button>

          <a href="/posts" class="btn grey">
            <i class="material-icons left">arrow_back</i> Volver
          </a>

        </form>

      </div>
    </div>

  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
